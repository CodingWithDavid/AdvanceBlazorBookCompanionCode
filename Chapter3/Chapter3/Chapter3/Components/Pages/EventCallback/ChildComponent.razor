<h3>Child Component</h3>

<button class="btn btn-primary" @onclick="NotifyParent">Update Parent</button>

<!-- ChildComponent.razor -->
@code {
    [Parameter]
    public EventCallback<string> OnStateChanged { get; set; }

    private void NotifyParent()
    {
        OnStateChanged.InvokeAsync("New State from Child");
    }
}

