

<h3>Razor Fragment Sample</h3>

<!-- Card.razor -->
<div class="card">
    <div class="card-header">
        @HeaderContent
    </div>
    <div class="card-body">
        @BodyContent
    </div>
    <div class="card-footer">
        @FooterContent
    </div>
</div>


@code {
    [Parameter]
    public RenderFragment? HeaderContent { get; set; }

    [Parameter]
    public RenderFragment? BodyContent { get; set; }

    [Parameter]
    public RenderFragment? FooterContent { get; set; }
}
